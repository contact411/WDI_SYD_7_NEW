<%= form_for @todo do |f| %>

  <div class="form-group">
  <%= f.label :task %>
  <%= f.text_field :task %>
  </div>

  <div class="form-group">
  <%= f.label :notes %>
  <%= f.text_field :notes %>
  </div>

  <div class="form-group">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  </div>

  <div class="form-group">
  <%= f.submit %>
  </div>

<% end %>