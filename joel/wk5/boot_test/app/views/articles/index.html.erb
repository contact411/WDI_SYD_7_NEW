<div class="row">
  <div class="col-sm-8 col-md-9">
    <h1>Listing articles</h1>
  </div>
  
  <div class="col-sm-4 col-md-3">  
    <p><%= link_to 'New Article', new_article_path, class: "btn btn-primary" %></p>
  </div>
</div>
  
<% @articles.each do |article| %>
<div class="row">

  <div class="col-sm-6 col-md-9">
    <h3><%= article.title %></h3>
    <p><%= article.content %></p>
  </div>

  <div class="col-sm-6 col-md-3">
    <p>
      <%= link_to 'Show', article, class: "btn btn-info" %>
      <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %>
      <%= link_to 'Destroy', article, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>

    <% end %>



